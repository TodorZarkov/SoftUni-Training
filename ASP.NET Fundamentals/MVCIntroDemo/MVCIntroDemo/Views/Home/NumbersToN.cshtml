@{
	ViewData["Title"] = "Numbers 1 to N";
	int count = ViewBag.Count;
}

@if(count > 0)
{
	<h2>Nums 1...@count</h2>
	<ul class="list-group">
		@for (int i = 1; i <= count; i++)
		{
			<li class="list-group-item">@i</li>
		}
	</ul>
}
else 
{
	<h2>Nums 1 ... N</h2>
}

<form asp-controller="Home" asp-action="NumbersToN" method="post" class="form-control">
		<input type="number" min="0" step="1" name="count"/>
		<button type="submit" class="btn-primary">Submit</button>
</form>